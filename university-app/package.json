  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "testcontainers": "^10.24.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
